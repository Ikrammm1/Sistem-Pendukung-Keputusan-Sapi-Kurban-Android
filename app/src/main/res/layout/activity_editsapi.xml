<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEDDE"
    tools:context=".Datasapi.EditsapiActivity">

    <LinearLayout
        android:id="@+id/atas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bgcoklatatas"
        android:elevation="5dp"
        android:padding="20dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/loginsapi"/>
        <TextView
            android:id="@+id/txtnama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Data Sapi"
            android:textColor="#FFEDDE"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="270dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#FFEDDE"
            android:paddingBottom="50dp"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nama /Label Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtAlt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama /Label Sapi"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="text"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Berat Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtBerat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Berat"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="text"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kecacatan Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtKecacatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kecacatan"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="text"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perilaku Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtPerilaku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perilaku"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="text"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Umur Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtUmur"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Umur"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="numberDecimal"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Jenis Kelamin Sapi :"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/carddetail"
                    android:layout_marginTop="10dp"
                    >
                    <EditText
                        android:id="@+id/txtJk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textSize="16sp"
                        android:textColor="@color/creame"
                        android:textStyle="bold"
                        android:inputType="text"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btnUbah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:background="@drawable/carddetail">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ubah"
                    android:textColor="@color/creame"
                    android:textStyle="bold"/>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>